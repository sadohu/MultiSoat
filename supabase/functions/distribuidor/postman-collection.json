                        "{{base_url}}"
                    ],
                    "path": [
                        "{{distribuidor_id}}"
                    ]
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test('Status code is 200', function () {",
                            "    pm.response.to.have.status(200);",
                            "});",
                            "",
                            "pm.test('Distribuidor found successfully', function () {",
                            "    const response = pm.response.json();",
                            "    pm.expect(response.success).to.be.true;",
                            "    pm.expect(response.data).to.exist;",
                            "    pm.expect(response.data.id).to.equal(parseInt(pm.collectionVariables.get('distribuidor_id')));",
                            "    pm.expect(response.message).to.include('encontrado');",
                            "});",
                            "",
                            "pm.test('Data integrity check', function () {",
                            "    const response = pm.response.json();",
                            "    pm.expect(response.data.email).to.equal(pm.collectionVariables.get('distribuidor_email'));",
                            "    pm.expect(response.data.nombre).to.equal(pm.collectionVariables.get('distribuidor_nombre'));",
                            "});",
                            "",
                            "pm.test('Includes proveedor relationship', function () {",
                            "    const response = pm.response.json();",
                            "    pm.expect(response.data.proveedor).to.exist;",
                            "    pm.expect(response.data.proveedor.razon_social).to.exist;",
                            "});"
                        ],
                        "type": "text/javascript"
                    }
                }
            ]
        },
